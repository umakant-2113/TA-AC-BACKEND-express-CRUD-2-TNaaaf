<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Charis+SIL:ital@1&display=swap"
      rel="stylesheet"
    />

    <title>Document</title>
  </head>
  <body>
    <header>  <h1 class="title-heading"> All The Title Of Books</h1> </header>
    <div class="btn">
      <a href="/">Home</a>
      <a href="/books/new">Add Book</a>
    </div>
  
    <div class=" flex-100">
      <%book.forEach(book=>{%>
          <div class="flex-30">
            <img class="full-width"  src="/images/<%= book.cover_image%>" alt="">
            <h2 class="title"><a href="/books/details"> <%= book.title%> </a> </h2>
            <a class="show" href="books/<%= book.id%>/details">  Show</a>
  </div>
  <%})%> 
  </div>
  </body>
</html>
